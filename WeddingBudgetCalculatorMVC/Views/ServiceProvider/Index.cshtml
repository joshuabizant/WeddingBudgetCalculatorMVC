@model IEnumerable<WeddingBudgetCalculatorMVC.Models.ServiceProviders>



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>Place to show Service Provider Information</p>

    <a asp-action="CreateVenue" asp-controller="ServiceProvider">Create Venue</a>
    <a asp-action="CreateFlorist" asp-controller="ServiceProvider">Create Florist</a>
    <a asp-action="CreateDJ" asp-controller="ServiceProvider">Create DJ</a>
    <a asp-action="CreateFoodProvider" asp-controller="ServiceProvider">Create Other Food Provider</a>
    <a asp-action="CreateCaterer" asp-controller="ServiceProvider">Create Caterer</a>
    <a asp-action="CreateBeverageProvider" asp-controller="ServiceProvider">Create Beverage Provider</a>
    <a asp-action="CreatePhotographer" asp-controller="ServiceProvider">Create Photographer</a>


    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Service Providers</h2>
            </div>
            <!--<div class="col-6 text-center">-->
                @*<a asp-controller="Expense" asp-action="Create" class="btn btn-primary">Create new Expense</a>*@
            <!--</div>-->
        </div>
        <br />
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Service Provider
                        </th>
                        <th>
                            Type
                        </th>
                        <th>
                            Total Cost
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var service in Model)
                    {
                        <tr>
                            <td width="30%">@service.ServiceProviderName</td>
                            <td width="30%">@service.ServiceProviderType</td>
                            <td width="30%">@service.ServiceProviderCost
                                @*<div class="w-100 btn-group" role="group">
                                    <a asp-controller="Expense" asp-action="Update" asp-route-Id="@expense.Id" class="btn btn-primary mx-1">Update</a>
                                    <a asp-controller="Expense" asp-action="Delete" asp-route-Id="@expense.Id" class="btn btn-danger mx-1">Delete</a>
                                </div>*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No items created yet</p>
        }
        </div>

</body>
</html>
