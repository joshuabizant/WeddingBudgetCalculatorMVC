@model IEnumerable<WeddingBudgetCalculatorMVC.Models.BeverageProvider>



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>Place to show Caterer Information</p>




    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Beverage Providers</h2>
            </div>
            <div class="col-6 text-center">
                <a asp-controller="Beverage" asp-action="Create" class="btn btn-primary">Create new Beverage Provider</a>
            </div>
        </div>
        <br />
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Beverage Provider
                        </th>
                        <th>
                            Style
                        </th>
                        <th>
                            Total Cost
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var service in Model)
                    {
                        <tr>
                            <td width="30%">@service.ServiceProviderName</td>
                            <td width="30%">@service.BeverageType</td>
                            <td width="30%">@service.ServiceProviderCost</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No items created yet</p>
        }
    </div>

</body>
</html>